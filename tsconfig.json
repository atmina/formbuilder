{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "noEmit": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "react"
  }
}
